<img src="/img/hero-image.png" alt="lonely wolf(literally me)" class="hero-image" width="981" height="528">

<section id="bio">
    <h2>My Projects</h2>
    <div class="repo-grid">
        <% repos.forEach(repo => { %>
            <div class="repo-item">
                <a href="<%= repo.html_url %>">
                    <div class="repo-thumbnail">
                        <img src="<%= repo.image %>" alt="<%= repo.name %>">
                    </div>
                    <div class="repo-details">
                        <h3><%= repo.name %></h3>
                        <p><%= repo.description %></p>
                    </div>
                </a>
            </div>
        <% }) %>
    </div>
</section>

<section id="bio">
    <h2>Posts</h2>
    <div class="post-grid">
        <% data.forEach(post => { %>
            <div class="post-item">
                <a href="/post/<%= post._id %>">
                    <div class="carousel">
                        <div class="carousel-images">
                            <img src="<%= post.image_url_1 %>" alt="<%= post.title %>" class="carousel-img">
                            <img src="<%= post.image_url_2 %>" alt="<%= post.title %>" class="carousel-img">
                            <img src="<%= post.image_url_3 %>" alt="<%= post.title %>" class="carousel-img">
                        </div>
                    </div>
                    <div class="post-details">
                        <h4><%= post.title %></h4>
                        <p><%= post.description %></p>
                        <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                    </div>
                </a>
            </div>
        <% }) %>
    </div>
</section>


<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View More</a>
    <% } %>

</section>

<div id="notification" class="notification">
    <p>Subscribe To My LetterNews!</p>
    <a href="/about">Subscribe</a>
</div>

