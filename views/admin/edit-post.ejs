<div class="admin-title">
    <h2>Edit Post</h2>

    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn-delete btn">
    </form>

</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">

    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Post Title" name="title" value="<%= data.title %>">

    <label for="description"><b>Description</b></label>
    <input type="text" name="description" cols="50" placeholder="Post Description" id="gen-description" value="<%= data.description %>">

    <label for="body"><b>Content</b></label>
    <textarea name="body" cols="50" rows="10" wrap="soft"><%= data.body %></textarea>

    <label for="image_url_1"><b>Image URL 1</b></label>
    <input type="text" placeholder="Image URL" name="image_url_1" value="<%= data.image_url_1 %>">

    <label for="image_url_2"><b>Image URL 2</b></label>
    <input type="text" placeholder="Image URL" name="image_url_2" value="<%= data.image_url_2 %>">

    <label for="image_url_3"><b>Image URL 3</b></label>
    <input type="text" placeholder="Image URL" name="image_url_3" value="<%= data.image_url_3 %>">

    <input type="submit" value="Update" class="btn">

</form>